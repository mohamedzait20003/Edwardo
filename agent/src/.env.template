# Edwardo Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# LLM Configuration
# ============================================
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=edwardo_db

# ============================================
# Google Services (OAuth)
# ============================================
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# ============================================
# Financial Services
# ============================================
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# ============================================
# Grocery & Shopping
# ============================================
INSTACART_API_KEY=your_instacart_api_key
INSTACART_USER_TOKEN=your_instacart_user_token
AMAZON_FRESH_ACCESS_KEY=your_amazon_access_key
AMAZON_FRESH_SECRET_KEY=your_amazon_secret_key

# ============================================
# Location Services
# ============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# Application Settings
# ============================================
APP_ENV=development
LOG_LEVEL=INFO
AGENT_TIMEOUT_SECONDS=120
